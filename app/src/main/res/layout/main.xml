<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <!-- The main content  Map-->


        <fragment
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:id="@+id/map"
            android:name="com.androidmapsextensions.SupportMapFragment"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
           >
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sideMenuBtn"
                    android:src="@drawable/ic_menu_black_24dp"
                    android:padding="12dp"
                    android:onClick="releaseTheBurger"
                    android:background="#96ffffff"
                    android:layout_marginLeft="4dp"
                    android:elevation="15dp"
                    android:cropToPadding="false" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/swToFullScrBtn"
                    android:src="@drawable/ic_fullscreen_black_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:onClick="expandMap"
                    android:padding="12dp"
                    android:background="#96ffffff"
                    android:layout_marginRight="4dp"
                    android:cropToPadding="true"
                    android:elevation="15dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/myLocationBtn"
                    android:src="@drawable/ic_my_location_black_24dp"
                    android:padding="12dp"
                    android:onClick="setToUserLocation"
                    android:background="#96ffffff"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/swToFullScrBtn"
                    android:layout_marginRight="2dp"
                    android:elevation="15dp" />


            </RelativeLayout>

     </fragment>

        <!-- Displays Cards under neath the Map fragment-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="271dp"
            android:scrollbars="vertical"
            android:layout_weight="0.76" />

    </LinearLayout>

     <!--Hamburger menu that displays on the Left side of the screen-->
    <!--<ListView-->
        <!--android:id="@+id/navList"-->
        <!--android:layout_width="300dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="start|start"-->
        <!--android:background="#ffeeeeee"/>-->

</android.support.v4.widget.DrawerLayout>