<fragment xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map"
    android:name="com.androidmapsextensions.SupportMapFragment"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    >
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sideMenuBtn"
            android:src="@drawable/ic_menu_black_24dp"
            android:padding="12dp"
            android:onClick="releaseTheBurger"
            android:background="#96ffffff"
            android:layout_marginLeft="4dp"
            android:elevation="15dp"
            android:cropToPadding="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swToFullScrBtn"
            android:src="@drawable/ic_fullscreen_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:onClick="expandMap"
            android:padding="12dp"
            android:background="#96ffffff"
            android:layout_marginRight="4dp"
            android:cropToPadding="true"
            android:elevation="15dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myLocationBtn"
            android:src="@drawable/ic_my_location_black_24dp"
            android:padding="12dp"
            android:onClick="setToUserLocation"
            android:background="#96ffffff"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/swToFullScrBtn"
            android:layout_marginRight="2dp"
            android:elevation="15dp" />


    </RelativeLayout>


</fragment>