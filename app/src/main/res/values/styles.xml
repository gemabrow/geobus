<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDialog</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:textColorPrimary">@color/colorAccentDialog</item>
        <!--<item name="android:listPopupWindowStyle">@style/ListPopUpWindowStyle</item>-->
    </style>
    <style name="CustomTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textColor">@color/tab_active</item>
    </style>

    <style name="CustomTabTexStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/tab_inactive</item>
    </style>

    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccentDialog</item>
    </style>

    <style name="ListPopUpWindowStyle"  parent="@style/Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:overlapAnchor">true</item>
        <item name="android:textSize">@dimen/list_text_size</item>
        <item name="android:background">@color/windowBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FFFFFF</item>

        <item name="android:textColorPrimary">@color/colorAccentDialog</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="enabledText">
        <item name="android:textColor">#833c3c</item>

    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base"></style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDialog</item>
    </style>

        <style name="markers" parent="@android:style/TextAppearance.Medium">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">#50b100</item>
            <item name="android:background">#FFFFFF</item>
            <item name="android:typeface">monospace</item>
        </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
